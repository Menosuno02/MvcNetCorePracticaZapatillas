@{
    Zapatilla zapatilla = ViewData["ZAPATILLA"] as Zapatilla;
}

<a asp-controller="Zapatillas" asp-action="Index"
   class="btn btn-primary my-3 w-100">Volver al Index</a>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">@zapatilla.Nombre</h4>
        <h5 class="card-text">Precio: @zapatilla.Precio€</h5>
        <p class="card-text">@zapatilla.Descripcion</p>
    </div>
</div>

<div id="contentImagen"></div>

@section Scripts {
    <script>
        function loadImagenPaginacion(posicion) {
            $(function () {
                $("#contentImagen").load
                    ("/Zapatillas/_PaginacionImagenZapas?posicion="
                        + posicion + "&idzapatilla=" + @zapatilla.IdProducto);
            });
        }

        loadImagenPaginacion(1);
    </script>
}